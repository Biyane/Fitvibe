<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="56dp"
    android:background="@drawable/bg_rounded_white_10"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/close_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="19dp"
        android:src="@drawable/ic_close"
        android:layout_gravity="top|end"
        app:tint="@color/nevada_color" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_success_enroll"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica_medium"
        android:textColor="@color/nevada_color"
        android:layout_marginHorizontal="20dp"
        android:text="Успешно записались"
        android:textSize="28sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_main_enroll_train_success_description"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/nevada_color"
        android:fontFamily="@font/helvetica_medium"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enroll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_green_rounded_30"
        android:fontFamily="@font/helvetica_regular"
        android:layout_marginHorizontal="20dp"
        android:text="Перейти в расписсание"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</LinearLayout>