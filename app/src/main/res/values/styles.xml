<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_white_rounded_tleft_20_tright_20</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />


    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="circleImageViewRounded" parent="roundedImageViewRounded">
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedImageView" parent="roundedImageViewRounded">
        <item name="cornerSize">20dp</item>
    </style>
</resources>